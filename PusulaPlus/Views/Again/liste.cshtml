@model ProductViewModel
@{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <p> @ViewBag.action;</p>
    <p> @ViewBag.controller</p>
    <p>@ViewBag.query</p>
    @if (Model.products.Count == 0)
    {
        @await Html.PartialAsync("_noproduct");
    }
    else
    {
        <div class="row" style="background-color:lightblue">
            <div class="col-md-3 ">
                <p>Kategori Gelecek </p>
            </div>
            <div class="col-md-9">
                @foreach (var iter in Model.products)
                {
                    <div class="card-body">

                        <img style="height:200px;width:150px" class="card-img-top" src="https://media.istockphoto.com/vectors/smart-phone-realistic-mobile-phone-smartphone-with-blank-screen-on-vector-id834343646" />

                        <h5 class="card-title">@iter.name</h5>
                        <p class="card-text">@iter.image</p>
                        <a href="#" class="btn btn-secondary">İncele</a>
                    </div>
                }

            </div>
            <form action="/product/list" class="form-control">
            </form>

        </div>
    }
}
