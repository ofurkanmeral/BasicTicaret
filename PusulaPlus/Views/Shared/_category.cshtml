@model ProductViewModel

@{
    <style>
        onure{
            background-color:red;
            color:blue;
            font-size:50px;
        }
    </style>
<div class="list-group">
    
    <a href="/products" class="list-group-item list-group-item-action">Tüm Kategoriler</a>
    <ul>
        @foreach (var iter in Model.categories)
        {
            <li><a href="/products/@iter.Url" class="list-group-item list-group-item-action @iter.Url==DataRoute.Values[" category"]?"active":"">@iter.name</a></li>
        }
    </ul>
</div>
}
