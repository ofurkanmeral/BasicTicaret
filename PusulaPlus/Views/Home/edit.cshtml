@model Product
@{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <form action="/home/edit" method="post" class="d-flex form-control">
        <input type="hidden" name="id" value="@Model.id" />
        <div class="form-group">
            <label for="">Name</label>
            <input asp-for="name" class="form-control me-2" />
        </div>
        <div class="form-group">
            <label for="">İmage</label>
            <input asp-for="image" class="form-control me-2" />
        </div>
        <div class="form-group">
            <label for="">Numara</label>
            <input asp-for="id" class="form-control me-2" />
        </div>
        <div class="form-group">
            <label for="">Kategori Seçiniz</label>
            <select asp-for="cateid" class="form-group">
                <option selected disabled>Seçiniz</option>
                <option value="1">Telefon</option>
                <option value="2">Bilgisayar</option>
                <option value="3">Elektronik</option>
            </select>
        </div>
        <button class="btn btn-outline-success" type="submit">Gonder</button>
    </form>

}
